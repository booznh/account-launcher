{
  "name": "ghostlite-launcher",
  "version": "1.0.1",
  "private": true,
  "author": "Ghostlite Team",
  "description": "A modern launcher for your application.",
  "homepage": "./",
  "main": "electron/main.js",
  "dependencies": {
    "axios": "^1.7.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.395.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ghostlite.launcher",
    "productName": "Ghostlite Launcher",
    "publish": {
      "provider": "gitlab",
      "owner": "osrsislamg-group",
      "repo": "ghostlite-launcher"
    },
    "files": [
      "build/",
      "electron/"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.4",
    "wait-on": "^7.2.0"
  }
}
