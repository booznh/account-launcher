{
  "name": "ghostlite-launcher",
  "version": "1.30.0",
  "private": true,
  "author": "Ghostlite Team",
  "description": "A modern launcher for your application.",
  "homepage": "./",
  "main": "build/electron.js",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.7.2",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.395.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && copyfiles -u 1 electron/* build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron ./electron/electron.js\"",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ghostlite.launcher",
    "productName": "Account Launcher & Manager",
    "artifactName": "ghostlite-launcher-setup-${version}.${ext}",
    "icon": "electron/images/icon.png",
    "publish": {
      "provider": "github",
      "owner": "booznh",
      "repo": "account-launcher"
    },
    "files": [
      "build/**/*",
      "electron/images/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/images/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/images/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/images/icon.png"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.4",
    "wait-on": "^7.2.0"
  }
}